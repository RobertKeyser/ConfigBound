{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "outputs": ["dist/**"]
    },
    "start:dev": {
      "dependsOn": ["^build"],
      "outputs": ["docs/build/**"],
      "cache": true,
      "persistent": true
    },
    "test": {},
    "test:coverage": {
      "outputs": ["coverage/**"]
    },
    "test:watch": {
      "cache": false,
      "persistent": true
    },
    "lint": {
      "cache": false,
      "dependsOn": ["format"]
    },
    "lint:ci": {},
    "format": {
      "cache": false
    },
    "format:ci": {},
    "docs:build": {
      "dependsOn": ["^build"],
      "outputs": ["docs/build/**"],
      "cache": true
    },
    "docs:dev": {
      "cache": false,
      "persistent": true
    },
    "docs:serve": {
      "dependsOn": ["docs:build"],
      "cache": false
    }
  }
}
